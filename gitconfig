[pager]
        diff = delta
        log = delta
        reflog = delta
        show = delta

[delta]
        features = side-by-side linux-numbers
        whitespace-error-style = 22 reverse
#       side-by-side = true
        navigate = true

[delta "decorations"]
        commit-decoration-style = bold yellow box ul
        file-style = bold yellow ul
        file-decoration-style = none

[interactive]
        diffFilter = delta --color-only

[alias]
	br = branch -vv
	ch = status -uno
	ci = commit -s
	cl = clone
	co = checkout
	contributors = !git log --format=format:"%an" | sort | uniq -c | sort -rn
	d  = diff
	dc = diff --cached
	dump = cat-file -p
	fo = fetch origin
	fa = fetch --all --tags
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	lga = log --oneline --graph --all --decorate
	lo = log --oneline
	pfl = push --force-with-lease
	pd = push --delete
	pur = pull --rebase
	recent = branch -a --sort=-committerdate
	revert = revert -s
	st = status
	stalk = !git for-each-ref --sort='-authordate' --format='%(authordate:relative)%09%(refname)' refs/remotes | sed -e 's-refs/remotes/--' | less -F
	type = cat-file -t
	unstage = reset HEAD --
	rup = remote update --prune

[pull]
	rebase = true
	ff = only
[branch]
	autosetuprebase=always
[rerere]
	enabled = true
[fetch]
	prune = true
	writeCommitGraph = true
[format]
	signoff = true
[diff]
	colorMoved = zebra
